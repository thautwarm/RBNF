{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    
    "options": {
        "cwd": "${fileDirname}",
        "env": {
            "PYTHONPATH": "${workspaceRoot}"
        }
        },
    "tasks": [
        {
            "label": "python",
            "type": "shell",
            "command": "python",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            
        }
    ]
}